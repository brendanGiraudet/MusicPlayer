<audio id="@Id" @onchange="@OnChange">
    <source src="@CurrentSong?.Path" type="audio/ogg; codecs=opus">
</audio>

<RadzenCard class="rz-my-12 rz-mx-auto" Style="max-width: 45rem" Visible="@IsDisplay">

    <RadzenCard class="rz-shadow-0 rz-border-radius-0">
        <RadzenRow RowGap="1">
            <RadzenImage Path="@CurrentSong?.ImagePath" Style="width: 100%; height: 15rem;" />

            <RadzenRow JustifyContent="JustifyContent.SpaceBetween" class="w-100 rz-p-2" Style="width:100%;">
                <RadzenColumn Size="2">
                    <RadzenText Text="@CurrentTimeAsTime" TextStyle="TextStyle.Overline" />
                </RadzenColumn>

                <RadzenColumn Size="8">
                    <RadzenSlider TValue="double" Value="@_currentTime" ValueChanged="@UpdateCurrentTime"
                        id="songProgressbar" class="w-100" Max="@DurationAsDecimal" Style="height:.75rem;width:100%;" />
                </RadzenColumn>

                <RadzenColumn Size="2">
                    <RadzenText Text="@DurationAsTime" TextStyle="TextStyle.Overline" />
                </RadzenColumn>

            </RadzenRow>
        </RadzenRow>

        <RadzenRow RowGap="0">
            <RadzenText TextStyle="TextStyle.H6"><strong>@CurrentSong?.Title</strong></RadzenText>
        </RadzenRow>

        <RadzenRow RowGap="0">
            <RadzenText TextStyle="TextStyle.Overline">@CurrentSong?.Artist</RadzenText>
        </RadzenRow>

        <RadzenRow>
            <RadzenText TextStyle="TextStyle.Overline">@CurrentSong?.CreationDate</RadzenText>
        </RadzenRow>
    </RadzenCard>

    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.SpaceEvenly" Gap="0">
        <RadzenButton Variant="Variant.Text" Icon="skip_previous" Size="ButtonSize.Large" Click="OnClickPreviousButton"
            Disabled="@HasPreviousButtonDisabled" />

        <RadzenButton Variant="Variant.Text" Icon="@IconPlayer" Size="ButtonSize.Large"
            Click="OnClickPlayPauseButton" />

        <RadzenButton Variant="Variant.Text" Icon="skip_next" Size="ButtonSize.Large" Click="OnClickNextButton"
            Disabled="@HasNextButtonDisabled" />
    </RadzenStack>

    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.SpaceEvenly" Gap="0">
        <RadzenButton Variant="Variant.Text" Icon="shuffle" Size="ButtonSize.Small" Click="OnRandomClick" />

        <RadzenButton Variant="Variant.Text" Icon="menu_open" Size="ButtonSize.Small" Click="OnShowMusicListClick" />
    </RadzenStack>
</RadzenCard>