@page "/player"

@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<PlayerComponent @ref="_playerComponent"  
                 OnShowMusicListClickCallback="@(() => MusicListDisplayShuffle())" 
                 IsDisplay="@(!_isMusicListDisplay)" />

<MusicListComponent OnClickCallback="@( async (song) => { await OnSelectedSong(song); })" 
                    IsDisplay="@_isMusicListDisplay" />