@inherits LayoutComponentBase

<RadzenComponents />

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@sidebarExpanded">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Icon="home" Path="" />
            <RadzenPanelMenuItem Text="Player" Icon="music_note" Path="player" />
            <RadzenPanelMenuItem Text="Youtube" Icon="youtube_activity"  Path="youtube"/>
            <RadzenPanelMenuItem Text="Song Manager" Icon="build" Path="songmanager"/>
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
    <RadzenFooter>
        <RadzenRow>
            @Configuration["ApplicationVersion"]
        </RadzenRow>
    </RadzenFooter>
</RadzenLayout>