@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<RadzenCard Style="max-width: 45rem; max-height:32rem;overflow:auto;"
            Visible="@IsDisplay">
    <RadzenRow class="rz-p-2">
        <RadzenTextBox @oninput="@OnFilterChanged"
                        class="w-100"/>
    </RadzenRow>

    @foreach (var song in MusicsState.Value.FilteredSongs)
    {
        <RadzenRow AlignItems="AlignItems.Center" 
                   @onclick="@(async () => {await OnClickSongLine(song);})"
                   class="rz-p-2"
                   Style="@GetBackgroundColorStyle(song.Title)">
            <RadzenColumn Size="4">
                <RadzenImage Path="@song.ImagePath" Style="width: 100%; height: 100%;" />
            </RadzenColumn>

            <RadzenColumn Size="8">
                <RadzenRow>
                    <RadzenText Text="@song.Title"
                                TextStyle="TextStyle.Overline"
                                Style="@GetColorTextStyle(song.Title)" />
                </RadzenRow>

                <RadzenRow>
                    <RadzenText Text="@song.Artist"
                                TextStyle="TextStyle.Overline"
                                Style="@GetColorTextStyle(song.Title)" />
                </RadzenRow>
            </RadzenColumn>
        </RadzenRow>
    }
</RadzenCard>